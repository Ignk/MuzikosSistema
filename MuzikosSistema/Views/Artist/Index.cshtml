@model IEnumerable<MuzikosSistema.Models.SongArtist>

@{
    ViewBag.Title = "Atlikėjai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Atlikėjai</h2>

<p>
    @Html.ActionLink("Sukurti naują atlikėją", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Atlikėjas/Grupė
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
            @Html.ActionLink("Redaguoti", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Plačiau", "Details", new { id=item.Id }) |
            @Html.ActionLink("Pašalinti", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
