@model IEnumerable<MuzikosSistema.Models.Song>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dainos</h2>

<p>
    @Html.ActionLink("Sukurti naują dainos įrašą", "Create")
</p>
<table class="table">
    <tr>

        <th>
           Atlikėjas
        </th>
        <th>
           Dainos pavadinimas
        </th>
        <th>
           Stilius
        </th>
        <th>
           Įvesta
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SongArtist.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SongName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Style1.StyleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Added)
        </td>
        <td>
            @Html.ActionLink("Redaguoti", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Plačiau", "Details", new { id = item.Id }) |
            @Html.ActionLink("Pašalinti", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
